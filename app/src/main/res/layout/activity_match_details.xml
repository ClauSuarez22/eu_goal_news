<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MatchDetailsActivity"
              android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="Matchday"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/matchday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/letterStyle"
                android:textSize="16sp"
                android:text="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/match_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="dd/MM/yyyy"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="FINAL"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="Start time"

                android:textStyle="normal"/>

            <TextView
                android:id="@+id/match_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="00:00 AM"
                android:textStyle="normal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/border_set">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="14sp"
                style="@style/letterStyle"
                android:text="Home"
                android:textStyle="normal"/>

            <ImageView
                android:id="@+id/home_team_img"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/home_team_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="18sp"
                style="@style/letterStyle"
                android:text="Away Team Name"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/home_team_goals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="35sp"
                android:gravity="center"
                style="@style/letterStyle"
                android:text="99"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_details_content_center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/letterStyle"
                android:textSize="35sp"
                android:textStyle="bold|italic"
                android:text="@string/vs_string"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/away_team_img"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/away_team_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="18sp"
                    style="@style/letterStyle"
                    android:text="Home Team Name"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/away_team_goals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30sp"
                    style="@style/letterStyle"
                    android:text="12"
                    android:textStyle="bold"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2"
                   android:gravity="center"
                   android:textSize="14sp"
                   style="@style/letterStyle"
                   android:text="Away"
                   android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            style="@style/letterStyle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Head to Head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_details_h2h_height"
            android:orientation="vertical">


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                            <TextView
                                android:id="@+id/h2h_home_team_name"
                                android:layout_width="@dimen/match_details_h2h_team_name"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:textSize="14sp"
                                style="@style/letterStyle"
                                android:text="Home Team Name"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/h2h_home_team_wins"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="14sp"
                                style="@style/letterStyle"
                                android:text="0"
                                android:textStyle="bold"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                            <TextView
                                android:id="@+id/h2h_away_team_name"
                                android:layout_width="@dimen/match_details_h2h_team_name"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:textSize="14sp"
                                style="@style/letterStyle"
                                android:text="Away Team Name"
                                android:textStyle="normal"/>


                            <TextView
                                android:id="@+id/h2h_away_team_wins"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="14sp"
                                style="@style/letterStyle"
                                android:text="0"
                                android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            style="@style/letterStyle"
                            android:text="Draws"
                            android:textStyle="normal"/>
                        <TextView
                            android:id="@+id/h2h_draws"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="16sp"
                            style="@style/letterStyle"
                            android:text="0"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/h2h_previous_matches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/silver"
            android:dividerHeight="0.5dp"/>

    </LinearLayout>

</LinearLayout>