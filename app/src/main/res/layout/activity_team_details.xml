<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              tools:context="uy.edu.ucu.eu_goal_news.TeamDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/team_logo"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:padding="5dp"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="Market value  "
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/market_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textSize="16sp"
                style="@style/letterStyle"
                android:text="$0"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:background="@drawable/border_set">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/letterStyle"
                android:text=""
                android:layout_weight="5"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PG"
                style="@style/letterStyle"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GF"
                style="@style/letterStyle"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GA"
                style="@style/letterStyle"
                />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DIF"
                style="@style/letterStyle"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="PTS"
                android:gravity="center"
                style="@style/letterStyle"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/position"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/letterStyle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team_name"
                android:layout_height="match_parent"
                android:layout_width="35dp"
                android:layout_weight="3"
                android:gravity="center|left"
                style="@style/letterStyle"
                android:text="" />

            <TextView
                android:id="@+id/playedGames"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                style="@style/letterStyle"/>

            <TextView
                android:id="@+id/goals"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                style="@style/letterStyle"/>

            <TextView
                android:id="@+id/goalsAgainst"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                style="@style/letterStyle"
                />

            <TextView
                android:id="@+id/goalsDifference"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                style="@style/letterStyle"/>

            <TextView
                android:id="@+id/points"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                style="@style/letterStyle"
                android:textStyle="bold"/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="5dp"
            android:textSize="20sp"
            style="@style/letterStyle"
            android:text="Team"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/silver"
            android:dividerHeight="0.5dp">
        </ListView>
    </LinearLayout>






</LinearLayout>
